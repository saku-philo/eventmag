<div class="container my-5" style="max-width: 30rem;">
  <div class="card">
    <div class="card-body m-5">
    <h3><%= t('.sign_in') %></h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group my-5">
        <%= f.label :email, t('.email') %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class="form-group my-5">
        <%= f.label :password, t('.password') %>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
      </div>

      <div class="form-group my-5">
        <%= f.submit  t('.sign_in'), class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    <% end %>
    <%#= render 'devise/shared/links' %>
    <%= link_to user_google_omniauth_authorize_path, class: "btn btn-lg btn-block btn-google", style: 'color: white;' do %>
      <span style="color: white;"><i class="fab fa-google"></i>ã€€Google Log in</span>
    <% end %>
    </div>
  </div>
</div>
