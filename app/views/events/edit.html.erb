<h1>イベント編集</h1>

<div class="container">
  <%= form_with(model: event, local: true, html: { role: 'form', :id => "eventEdit_form" }) do |f| %>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control-file' %>
    </div>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: 'form-control', placeholder: "必須項目です" %>
    </div>

    <div class="form-group">
      <%= f.label :place %><br />
      <%= f.text_field :place, class: 'form-control', placeholder: "場所を入力してください（必須）" %>
    </div>

    <div class="form-group">
      <%= f.label :date %><br />
      <%= f.date_field :date, class: 'form-control', placeholder: "Please enter like => 2020-06-07" %>
    </div>

    <div class="form-group">
      <%= f.label :start_at %><br />
      <%= f.time_field :start_at, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :end_at %>
      <%= f.time_field :end_at, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :cost %><br />
      <%= f.text_field :cost, class: 'form-control', placeholder: "参加費を円単位、半角数字で入力してください（必須）" %>
    </div>

    <div class="form-group">
      <%= f.label :capacity %><br />
      <%= f.text_field :capacity, class: 'form-control', placeholder: "参加可能人数を半角数字で入力してください（必須）" %>
    </div>

    <div class="form-group">
      <%= f.label :link_url %>
      <%= f.text_field :link_url, class: 'form-control', placeholder: "参照するurlがあれば入力してください" %>
    </div>

    <div class="form-group">
      <%= f.label :meta %>
      <%= f.text_area :meta, class: 'form-control', placeholder: "備考欄" %>
    </div>

    <div class="my-5">
      <%= f.submit nil, class: 'btn btn-outline-primary' %>
    </div>
  <% end %>

  <%= link_to '一覧へ', events_path, class: 'btn btn-primary' %>
</div>
